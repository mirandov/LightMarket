= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :color_light
    = f.text_field :color_light
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :min_order
    = f.number_field :min_order
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :subcategory
    = f.text_field :subcategory_id
  .filed
    = f.label :avatar
    = f.file_field :avatar, input_html: { accept: 'image/*' }, id: 'avatar', class: 'form-control'
  .actions
    = f.submit 'Save'
