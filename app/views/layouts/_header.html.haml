%body
  .header-top
    .header-bottom
      .logo
        %a{:href => mains_path}
          %img= image_tag('logo2.png')

      /
      .top-nav
        %ul.memenu.skyblue
          %li.active
            %a{:href => descriptions_path} О нас
          %li.grid
            %a{:href => deliveries_path} Доставка
          %li.grid
            %a{:href => contacts_path} Контакты
      /

      - if user_signed_in?
        - if current_user.has_role?("admin")
          .cart.box_1
            - if user_signed_in?
              - if current_user.has_role?("admin")
                = link_to 'Панель админа', admin_panels_path
                %br
      .cart.box_1
        - if user_signed_in?
          %span
            #{current_user.email}
            = link_to 'Выйти', destroy_user_session_path, :method => :delete
          %br
          %a{:href => bags_path}
            .total
              %span.simpleCart_total
              (
              %span#simpleCart_quantity.simpleCart_quantity>
              )
            -# %span.glyphicon.glyphicon-shopping-cart{"aria-hidden" => "true"}
          %p
            %a.simpleCart_empty{:href => "javascript:;"} Корзина пуста
          .clearfix
          .new-line

        - else
          = link_to 'Войти', new_user_session_path
          или #{link_to 'Зарегистрироваться', new_user_registration_path}

      .clearfix

      /
    .clearfix
